<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>

    <environment names="Development,Staging,Production">
        <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />        
        <link rel="stylesheet" href="~/css/site.css" />
    </environment>

    <environment names="Development,Staging,Production">
        <script src="~/lib/jquery/dist/jquery.min.js"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.min.js"></script>
        <script src="~/lib/handlebars/handlebars.min.js"></script>
        <script src="~/lib/underscore/underscore-min.js"></script>
        <script src="~/lib/backbone/backbone-min.js"></script>
        <script src="~/js/site.min.js"></script>
    </environment>

    @RenderSection("scripts", required: false)
</head>
<body>  
    <nav class="navbar navbar-inverse ">
        <div class="container-fluid">
            <div class="navbar-header">
            
                <!-- Agregar boton del MenÃº cuando esta collapsado -->
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#myNavbar">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="/Main/Inicio">Inicio</a>
            </div>
            <ul class="nav navbar-nav">      
                <li class="dropdown"><a class="dropdown-toggle" data-toggle="dropdown" href="#">Administrativo<span class="caret"></span></a>
                <ul class="dropdown-menu">
                    <li><a href="/Admin/Usuarios">Usuarios</a></li>
                </ul>
                <li><a href="/Main/AcercaDe">Acerca de</a></li>
            </ul>
            <ul class="nav navbar-nav navbar-right">
                <li><a href="/Main/Logout"><span class="glyphicon glyphicon-log-out"></span> Logout</a></li>
            </ul>
        </div>
    </nav>

    <div class="container">
        <div class="alert alert-danger" id="mensajeError" style="display:none">
        <span id="error">error</span>
        <button id="btnCloseErr" class="btn btn-danger" onclick="$('#mensajeError').hide();">
        <span class="glyphicon glyphicon-remove"></span> Ok
        </button>
        </div>           

        <div class="alert alert-success" id="mensajeOk" style="display:none">
        <span id="mensaje">mensaje</span>
        <button id="btnCloseMensaje" class="btn btn-success" onclick="$('#mensajeOk').hide();">
        <span class="glyphicon glyphicon-ok"></span> Ok
        </button>
        </div>  

        @RenderBody()
        <hr />
        <footer>
            <p>Footer</p>
        </footer> 
    </div>   
</body>
</html>
